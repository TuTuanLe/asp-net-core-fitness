
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Admin_layout.cshtml";
}


@model fitness.Models.SlideShow
<div class="card card-custom">
    <div class="card-header">
        <h3 class="card-title">
            Add SlideShow
        </h3>
    </div>
    <form asp-controller="SlideShow" asp-action="add" method="post" class="form" enctype="multipart/form-data">
        <div class="card-body">

            <div class="form-group">
                <label>File Img for Slide Show</label>
                <div></div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="customFile" name="photo" accept="image/*" />
                    <label class="custom-file-label" for="customFile">Choose img</label>
                </div>
            </div>

            <div class="form-group">
                <label>Name Slide Show</label>
                <div class="input-group">
                    <div class="input-group-prepend"><span class="input-group-text">()</span></div>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name SlideShow" />
                </div>
                <span class="form-text text-muted">Some help content goes here</span>
            </div>

            <div class="form-group">

                <label class="radio">
                    <input asp-for="Status" type="checkbox" />
                    <span></span>
                    &ensp;Status
                </label>

                <span class="form-text text-muted">Status for SlideShow</span>
            </div>


            <div class="card-footer">
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button asp-controller="slideshow" asp-action="index" class="btn btn-secondary">Cancel</button>
            </div>
        </div>
    </form>
</div>
