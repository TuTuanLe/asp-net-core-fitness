
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Admin_layout.cshtml";
}


@model fitness.Models.Category
<div class="card card-custom">
    <div class="card-header">
        <h3 class="card-title">
            Update Category
        </h3>
    </div>
    <form asp-controller="category" asp-action="edit" method="post" class="form">
        <div class="card-body">
            <input type="hidden" asp-for="id"  />
            <div class="form-group">
                <label>Name category</label>
                <div class="input-group">
                    <div class="input-group-prepend"><span class="input-group-text">()</span></div>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name category" />
                </div>
                <span class="form-text text-muted">Some help content goes here</span>
            </div>

            <div class="form-group">

                <label class="radio">
                    <input asp-for="Status" type="checkbox" />
                    <span></span>
                    &ensp;Status
                </label>

                <span class="form-text text-muted">Status for category</span>
            </div>


            <div class="card-footer">
                <button type="submit" class="btn btn-primary mr-2">Update</button>
                <button type="reset" class="btn btn-secondary">Cancel</button>
            </div>
        </div>
    </form>
</div>
