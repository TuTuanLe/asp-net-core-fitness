
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Admin_layout.cshtml";
}
@model fitness.Models.ViewModels.ProductViewModel;
<div class="card" style="width:50%; align-items: center;">
    <div class="card-header">
        <h3 class="card-title">
            Add Product
        </h3>
    </div>
    <form asp-controller="product" asp-action="add" method="post" class="form" enctype="multipart/form-data">
        <div class="card-body">

            <div class="form-group">
                <label>File Img for Product in category </label>
                <div></div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="customFile" name="photo" accept="image/*" />
                    <label class="custom-file-label" for="customFile">Choose img</label>
                </div>
            </div>


            <div class="form-group">
                <label>Name</label>
                <div class="input-group">
                    <div class="input-group-prepend"><span class="input-group-text">(*)</span></div>
                    <input asp-for="Product.Name" type="text" class="form-control" placeholder="Name Product ..." />
                </div>
            </div>

            <div class="form-group">
                <label>Description</label>
                <div class="input-group">
                    <div class="input-group-prepend"><span class="input-group-text">(*)</span></div>
                    <input asp-for="Product.Description" type="text" class="form-control" placeholder="Description..." />
                </div>
            </div>

            <div class="form-group">
                <label>Details</label>
                <div class="input-group">
                    <div class="input-group-prepend"><span class="input-group-text">(*)</span></div>
                    <input asp-for="Product.Details" type="text" class="form-control" placeholder="Detail ..." />
                </div>
            </div>
            <div class="form-group">
                <label>Price</label>
                <div class="input-group">
                    <div class="input-group-prepend"><span class="input-group-text">(*)</span></div>
                    <input asp-for="Product.Price" type="number" min="0" class="form-control" placeholder="Price ..." />
                </div>
            </div>

            <div class="form-group">
                <label>Quantity</label>
                <div class="input-group">
                    <div class="input-group-prepend"><span class="input-group-text">(*)</span></div>
                    <input asp-for="Product.Quantity" type="number" min="0" class="form-control" placeholder="Quantity ..." />
                </div>
            </div>

            <div class="form-group">

                <label class="radio">
                    <input asp-for="Product.Status" type="checkbox" />
                    <span></span>
                    &ensp;Status
                </label>

            </div>

            <div class="form-group">
                <label>Category</label>
                <div class="input-group">
                    <div class="input-group-prepend"><span class="input-group-text">(*)</span></div>
                    <select class="form-control" asp-for="Product.CategoryId" asp-items="@Model.Categories">
                    </select>
                </div>
                <span class="form-text text-muted">Please select an Category</span>
            </div>



            <div class="card-footer">
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button asp-controller="product" asp-action="index" class="btn btn-secondary">Cancel</button>
            </div>
        </div>
    </form>
</div>


